<!DOCTYPE html>
<html>
<head>
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .invoice-header {
            background-color: #f2f2f2;
            padding: 10px;
            text-align: center;
        }
        .invoice-body {
            margin-top: 20px;
        }
        .invoice-section {
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        .text-right {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="invoice-header">
        <h1>Invoice</h1>
    </div>

    <div class="invoice-body">
        <div class="invoice-section">
            <h2>Invoice Details</h2>
            <table>
                <tr>
                    <th>Invoice Number</th>
                    <td>{{ invoiceNumber }}</td>
                </tr>
                <tr>
                    <th>Date Issued</th>
                    <td>{{ formatDate dateIssued }}</td>
                </tr>
                <tr>
                    <th>Due Date</th>
                    <td>{{ formatDate dueDate }}</td>
                </tr>
                <tr>
                    <th>Total Amount</th>
                    <td class="text-right">{{ totalAmount }}</td>
                </tr>
                <tr>
                    <th>Tax Amount</th>
                    <td class="text-right">{{ taxAmount }}</td>
                </tr>
            </table>
        </div>

        <div class="invoice-section">
            <h2>Customer Details</h2>
            <p>{{ customer.name }}</p>
            <p>{{ customer.address }}</p>
            <!-- Add other customer details here -->
        </div>

        <div class="invoice-section">
            <h2>Supplier Details</h2>
            <p>{{ supplier.name }}</p>
            <p>{{ supplier.address }}</p>
            <!-- Add other supplier details here -->
        </div>
    </div>
</body>
</html>
